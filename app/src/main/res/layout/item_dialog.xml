<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edit_sarlavha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="sarlavha"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_sana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="sana"
        android:inputType="date"
        android:textSize="20sp" />


    <CheckBox
        android:id="@+id/check_bajarildi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="bajarildi"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_batafsil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="batafsil"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Oxirgi muddat"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:background="@drawable/date_dialog_btn"
        android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <Spinner
        android:id="@+id/spinner_zarurlik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Save"
        android:textSize="20sp" />

</LinearLayout>